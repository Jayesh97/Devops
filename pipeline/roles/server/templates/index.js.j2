const redis = require('redis');
const util  = require('util');
const os = require('os');
const si = require('systeminformation');

// Calculate metrics.
// TASK 1:
class Agent
{
    memoryLoad()
    {
    //    console.log( os.totalmem(), os.freemem() );
        let totalMem = os.totalmem();
        let freeMem = os.freemem();
        let usedMem = (totalMem - freeMem)*100;

       return usedMem/totalMem;
    }
    async cpu()
    {
       let load = await si.currentLoad();
    //    console.log(load.currentload)
       return load.currentload;
    }
    async upTime()
    {
        let uptime = si.time();
        return uptime.uptime
    }
}

(async () => 
{
    // Get agent name from command line.
    let args = process.argv.slice(2);
    main(args[0]);

})();


async function main(name)
{
    let agent = new Agent();

    let connection = redis.createClient(6379, "{{hostvars['monitor']['ansible_host']}}", {})
    connection.on('error', function(e)
    {
        console.log(e);
        process.exit(1);
    });
    let client = {};
    client.publish = util.promisify(connection.publish).bind(connection);

    // Push update ever 1 second
    setInterval(async function()
    {
        let payload = {
            memoryLoad: agent.memoryLoad(),
            cpu: await agent.cpu(),
            uptime: await agent.upTime()
        };
        let msg = JSON.stringify(payload);
        await client.publish(name, msg);
        console.log(`${name} ${msg}`);
    }, 1000);

}